[color]
    ui = auto

[alias]
    co  = checkout
    st  = status -sb
    ci  = commit
    a   = add
    b   = branch
    d   = diff
    l   = log
    pl  = pull
    ps  = push
    pr  = pull-request
    m   = merge
    f   = fetch
	  lol = log --graph --all --decorate --oneline
    bs  = for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/ --count=10

[apply]
    whitespace = nowarn

